<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zuki.campeonato" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateTeam"
            android:label="@string/title_activity_create_team" >
        </activity>
        <activity
            android:name=".ShowTeam"
            android:label="@string/title_activity_show_team" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Championship"
            android:label="@string/title_activity_championship" >
        </activity>
    </application>

</manifest>
